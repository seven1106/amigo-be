<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
    }
    .btn-edit {
      background-color: green;
      color: white;
      outline: none;
      border: none;
      height: 25px;
      width: 50px;
      border-radius: 3px;
      cursor: pointer;
    }
    .btn-del {
      background-color: red;
      color: white;
      outline: none;
      border: none;
      height: 25px;
      width: 50px;
      border-radius: 3px;
      cursor: pointer;
    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email%></td>
        <td><%= dataTable[i].firstName%></td>
        <td><%= dataTable[i].lastName%></td>
        <td><%= dataTable[i].address%></td>
        <td>
          <a href="/edit-crud?id=<%=dataTable[i].id%>" class="btn-edit">Edit</a>
          <a href="/delete-crud?id=<%=dataTable[i].id%>" class="btn-del"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
